<% layout('/layouts/boilerplate') %>
<div class="row">
  <div class="col-6 offset-3">
    <div class="card" style="width: 18rem;">
      <img src="<%= restaurant.image %>" class="card-img-top">
      <div class="card-body">
        <h5 class="card-title"><%= restaurant.name  %></h5>
        <p class="card-text"><%= restaurant.description %> </p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= restaurant.location %></li>
      </ul>
      <div class="card-body">
        <a href="/restaurants/<%= restaurant._id %>/edit" class="card-link btn btn-success">Edit</a>
        <form class="d-inline" action="/restaurants/<%= restaurant._id %>?_method=delete" method="POST">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <h2>Leave a Review:</h2>
    <form action="/restaurants/<%= restaurant._id %>/reviews" method="POST" class="mb-3">
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"></textarea>
      </div>
      <button class="btn btn-success">Submit Review</button>
    </form>
  </div>
</div>