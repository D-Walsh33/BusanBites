<% layout('/layouts/boilerplate') %>
<h1>List of All Restaurants</h1>
<div>
  <a href="/restaurants/new">Add Restaurant</a>
</div>
<% for(let restaurant of restaurants) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" alt="" src="<%= restaurant.image %> ">
    </div>
    <div class="col-md-8">
      <h5 class="card-title"><%= restaurant.name %> </h5>
      <p class="card-text"><%= restaurant.description %> </p>
      <p class="card-text">
        <small class="text-muted"><%= restaurant.location %></small>
      </p>
      <a href="/restaurants/<%= restaurant._id %>" class="btn btn-primary">Go Here!</a>
    </div>
  </div>
</div>
<% } %>