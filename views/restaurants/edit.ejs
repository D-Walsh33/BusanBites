<% layout('/layouts/boilerplate') %>
<h1>Edit <%= restaurant.name %> </h1>
<form action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST">
  <div>
    <label for="name">Restaurant Name:</label>
    <input type="text" name="restaurant[name]" id="name" value="<%= restaurant.name %>">
  </div>
  <div>
    <label for="location">Restaurant Location</label>
    <input type="text" name="restaurant[location]" id="location" value="<%= restaurant.location %>">
  </div>
  <button>Update</button>
</form>
<div>
  <a href="/restaurants<%= restaurant._id %>">Back to Restaurant</a>
</div>