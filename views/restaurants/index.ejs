<% layout('/layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 500px"></div>


<h1>List of All Restaurants</h1>
<div>
  <a href="/restaurants/new">Add Restaurant</a>
</div>
<% for(let restaurant of restaurants) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if(restaurant.images.length) {%>
      <img class="img-fluid" alt="" src="<%= restaurant.images[0].url %> ">
      <% } else {%>
      <img class="img-fluid" src="https://res.cloudinary.com/djelcbgal/image/upload/v1671444815/BusanBites/l2fpw2qzwmasanikwrd2.png" alt="">
      <% } %>
    </div>
    <div class="col-md-8">
      <h5 class="card-title"><%= restaurant.name %> </h5>
      <p class="card-text"><%= restaurant.description %> </p>
      <p class="card-text">
        <small class="text-muted"><%= restaurant.location %></small>
      </p>
      <a href="/restaurants/<%= restaurant._id %>" class="btn btn-primary">Go Here!</a>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const restaurants = {
    features: <%- JSON.stringify(restaurants) %>
  };
</script>

<script src="/javascripts/clusterMap.js"></script>